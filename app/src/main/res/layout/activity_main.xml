<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Trailer Prompt Enhancer"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Preset Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/preset_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/delete_preset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/preset_name_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Preset name (e.g., Epic Action Trailer)"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/save_preset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Preset" />

        </LinearLayout>

        <EditText
            android:id="@+id/base_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter base movie idea or existing prompt (optional)"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="8dp" />

        <!-- Clear Current Selections Button -->
        <Button
            android:id="@+id/clear_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Current Selections"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF6D00"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select parameters to enhance:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Genres -->
        <CheckBox android:id="@+id/genre_action" android:text="Action" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/genre_horror" android:text="Horror" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/genre_comedy" android:text="Comedy" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/genre_romance" android:text="Romance" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/genre_sci_fi" android:text="Sci-Fi" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/genre_animation" android:text="Animation" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <!-- Visual Styles -->
        <CheckBox android:id="@+id/style_epic" android:text="Epic / Dramatic (In a world... style)" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/style_big_eyed" android:text="3D Big-Eyed Expressive Characters (cute animated style)" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/style_dark" android:text="Dark and Gritty" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/style_funny" android:text="Humorous / Quirky" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/style_emotional" android:text="Emotional / Heartwarming" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <!-- Animation Style Details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animation Style Details:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp" />

        <CheckBox android:id="@+id/anim_wholesome" android:text="Wholesome Family-Friendly" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/anim_fairytale" android:text="Magical Fairy-Tale Kingdom" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/anim_bright_colors" android:text="Bright &amp; Saturated Colors" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/anim_soft_lighting" android:text="Soft Lighting" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/anim_sweeping_camera" android:text="Sweeping Camera Moves" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/anim_talking_animal" android:text="Talking Animal Sidekick" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/anim_slapstick" android:text="Gentle Slapstick Humor" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/anim_emotional_kids" android:text="Emotional Moments (PG-rated for kids &amp; parents)" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <!-- Music Intensity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trailer Music Intensity:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/music_intensity_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Music Details -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music Details (select any):"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp" />

        <CheckBox android:id="@+id/music_braams" android:text="Deep Braams &amp; Sub Booms" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_hybrid_orchestral" android:text="Hybrid Orchestral (strings + synths)" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_risers_hits" android:text="Dramatic Risers &amp; Hits" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_epic_choir" android:text="Epic Choir &amp; Vocals" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_pulsing_synth" android:text="Pulsing Synth Bass" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_horror_stingers" android:text="Horror Stingers &amp; Screeches" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_quirky_orchestra" android:text="Quirky Playful Orchestra" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_heartwarming_piano" android:text="Heartwarming Piano &amp; Strings" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <!-- Music Mood -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music Mood:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp" />

        <CheckBox android:id="@+id/music_dramatic_orchestral" android:text="Dramatic Orchestral" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_suspenseful" android:text="Suspenseful / Heighten Unease" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_tense" android:text="Tense" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_ominous" android:text="Ominous" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_mysterious" android:text="Mysterious" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_pensive" android:text="Pensive / Thoughtful" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_heartwarming" android:text="Heartwarming / Gentle" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_dark_ambient" android:text="Dark Ambient Atmospheric (haunting notes)" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_slow" android:text="Slow" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_melancholy" android:text="Melancholy" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_somber" android:text="Somber" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_anxiety_unease" android:text="Anxiety / Unease" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_surprise" android:text="Surprise" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_dreaminess" android:text="Dreaminess" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_nostalgia" android:text="Nostalgia" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_ambivalence_conflict" android:text="Ambivalence / Inner Conflict" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_ambiguous" android:text="Ambiguous" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_mixed_feelings" android:text="Mixed Feelings" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_bittersweet" android:text="Bittersweet" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_uncertain_unresolved" android:text="Uncertain / Unresolved" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_surreal" android:text="Surreal" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_disoriented" android:text="Disoriented" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_restless" android:text="Restless" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_happy" android:text="Happy" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_energetic" android:text="Energetic" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_uplifting" android:text="Uplifting" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_feelgood" android:text="Feel-good" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_cheerful" android:text="Cheerful" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_optimistic" android:text="Optimistic" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_playful" android:text="Playful" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/music_bright" android:text="Bright" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <!-- Generate Button -->
        <Button
            android:id="@+id/generate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Enhanced Trailer Text Prompt"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Generated Prompt Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generated Prompt:"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <!-- Copy to Clipboard Button -->
        <Button
            android:id="@+id/copy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copy Prompt to Clipboard"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF3700B3"
            android:textColor="#FFFFFF" />

        <!-- Result Area -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="500dp"
            android:background="#000000"
            android:padding="16dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textIsSelectable="true"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="80dp" />

        </ScrollView>

        <!-- Extra bottom space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="120dp" />

    </LinearLayout>
</ScrollView>