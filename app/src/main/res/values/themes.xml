<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using pure AppCompat (no Material3 attrs) -->
    <style name="Theme.Promptstyle" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize basic colors (these exist in AppCompat) -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>

        <!-- Optional: Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">#3700B3</item>

        <!-- Background and text colors -->
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>
</resources>